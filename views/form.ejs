<div class="form__container">
    <form method="post" action="/form">
        <h2>Partner formulier</h2>
        <p>Voeg een website toe van een partner om te checken.</p>
        <label for="name">Naam van partner <span>(verplicht)</span></label>
        <select id="name" name="websiteId">
            <% website_data.websites.forEach(website=> { %>
            <option value="<%= website.id  %>"><%= website.titel %></option>
            <%})%>
        </select>
    
        <label for="url">URL van website <span>(verplicht)</span></label>
        <input id="url" type="url" required name="url">
    
        <input type="submit" />
    </form>
</div>

